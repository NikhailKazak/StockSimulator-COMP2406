<!DOCTYPE html>
<html lang ="eng">
    <head>
        <meta charset ="utf-8">
        <title>Expandable Sidebar Menu</title>
        <link rel="stylesheet" href="userMyMoney.css">
        <link rel ="stylesheet" href="../topNav.css">
        <!--<link rel="stylesheet" href="uiAddToArray.css">-->
        <style>
            .watchlist{
                left: -100px;
                top: -400px;
            }

        </style>
    </head>
    <body>
        <!--Header Section: has the menu to navigate through the page-->
        <section id="menu">
            <div class="menu container">
                <div class="nav-bar"> 
                    <div class="company"> <!--Company class will help style text like a nice title-->
                        <a href="#myMoney"><h1>Stock-Aholics</h1></a> <!-- The span colors one letter different--> 
                    </div>
                    <div class="nav-list">
                        <div class="press"> <!--botton to press when on phone will open menu-->
                            <div class="bar"> <!--line that makes button look better-->
                            </div>
                        </div>
                        <ul>
                            <!--all the places to navigate to-->
                            <li><a href = "../userHome">My Profile</a></li> 
                            <li><a href = "./userMyStocks">My Stocks</a></li>
                            <!--<li><a href = "..#aboutUs">About Us</a></li>
                            <li><a href = "..#contact">Contact</a></li>-->
                            <li><form action="/logout?_logout=DELETE" method ="POST">
                                <button type="logout"><a>sign Out</a></button>
                            </form></li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
        <nav class="profileMenu">
            <div class="options">Hi <%= name %></div>
            <ul>
                <li><a href="../userHome">My Profile</a></li>
                <li><a href="./userMyStocks">My Portfolio</a></li>
                <li><a href="./userMyOrder">My Orders</a></li>
                <li><a href="./userMyWatchlist">My Watchlist</a></li>
                <li><a href="./userMyResearch">Stock Research</li>
                <li><a href="./userMyTrades">Trade</a></li>
                <li><a href="./userMyHistory">View Account History</a></li>
                <li><a href="./userMySubs">View Event Subscription</a></li>
                <li><a href="./stockHistory">Stock history</a></li>
                <li><a href="./userMyMoney">Edit Money in Account</a></li>
            </ul>
        </nav>
        

        <!--My Profile Section-->
        <section id="myMoney">
            <div class="myMoney container">
                <div class="myMoney-top">
                    !--<h1 class="section-title">My <span> Money</span></h1>
                </div>
                <div class="myMoney-Info">
                    <!--splits area into section each having its own icon and area-->
                    <div class="icon">
                        <h2>Money: $<%= money %></h2>
                        <!--<p>UI The user uses to place add money to their account</p>-->
                    </div>  
                </div>
            </div>
        </section>

        <section id = "UI">
            <div class="ui">
                <div class="top">
                    <p><span class="left-icon">&#x2190;</span>Stocks<span class="right-icon">&#xb7;&#xb7;&#xb7;</span></p>
                </div>

                <div class="middle">
                    <h1>Stock-Aholics Research<span> TM  </span></h1>
                    <p>Please enter the quantity of money you need</p>
                </div>

                <div class="bottom">
                    <!--Remove buttons accordingly i.e in the stock buying section only enable the purchase stock button-->
                    
                    <!-- <form action="/NotMain/user/userMyTrades/watch" method="post"> -->
                    <form action="/NotMain/user/userMyMoney/redirect" method="post">
                    <button onclick="addedMoney()" name="money" id="money" type="money" class="stock-option-btn">Add Money To Account</button>
                    <button onclick="removedMoney()" name="remMoney" id="remMoney" type="remMoney" class="stock-option-btn">Remove Money from Account</button>
                    
                    <script>
                        function addedMoney()
                        {
                            alert("If the entered information was adequate or valid, money was added to your account");
                        }
                        function removedMoney()
                        {
                            alert("If the entered information was adequate or valid, money was removed from your account");
                        }
                    </script>

                    <div class="Stock-Details"> <!--For adding to watchlist/event subs/purchase-->
                        <div class="Money-Details"> <!--For adding to watchlist/event subs/purchase-->
                            <div class="Money"> <!--Condition which has to be met if the above is for event subs-->
                                <p>Please enter the amount of money</p>
                                <label>Money</label><br>
                                <input name="price" type="number" class="Desired-Price-Field" placeholder="$$$$$$$$$$$$">
                            </div>
                            <!-- </form> -->
                            </form>
                        </div>
                    </div>
                    
                </div>
            </div>
        </section>
        
        <script>
            const press = document.querySelector('.menu .nav-bar .nav-list .press'); //tells js where to get 
            const mobileMenu = document.querySelector('.menu .nav-bar .nav-list ul');
            const menuContent = document.querySelectorAll('.menu .nav-bar .nav-list ul li a'); //here multiple things so use All
            
            press.addEventListener('click', () => {//when item is clicked
                mobileMenu.classList.toggle('active');//adds class active
            });
            
            menuContent.forEach((item)=> {//because multiple line use forEach
                item.addEventListener('click', () => {
                    mobileMenu.classList.toggle('active');
                });
            });
        </script>
        <!-- <script type="text/javascript" src="businessLogic.js"></script> -->
    </body>
</html>

